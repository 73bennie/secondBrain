#!/usr/bin/env bash
set -euo pipefail
DB="${SB_DB:-$HOME/.secondbrain/brain.db}"

if [[ $# -ne 1 ]]; then
  echo "Usage: sb-project-done <project_id>"
  exit 1
fi

pid="$1"
if ! [[ "$pid" =~ ^[0-9]+$ ]]; then
  echo "project_id must be a number"
  exit 1
fi

sqlite3 "$DB" <<SQL
UPDATE projects SET status='done', updated_at=datetime('now') WHERE id=$pid;
INSERT INTO log_events (event, details) VALUES ('project_done', 'project $pid');
SQL

echo "project $pid marked done"
